[colors]
	background	= #ff32302f
	foreground	= #ffebdbb2

	black		= #ff282828
	red			= #ffcc241d
	green		= #ff98971a
	yellow		= #ffd79921
	blue		= #ff458588
	magenta		= #ffb16286
	cyan		= #ff689d6a
	white		= #ffa89984

	primary		= ${self.blue}
	primary-bg	= ${self.foreground}
	secondary	= ${self.blue}
	alert		= ${self.yellow}


[bar/base]
	width = 100%
	height = 36

	foreground = ${colors.foreground}
	background = #00000000

	overline-size = 4
	underline-size = 4

	border-size = 15
	border-top-size = 0

	bottom = false

	fixed-center = true
	tray-position = none

	cursor-click = pointer
	cursor-scroll = ns-resize

	font-0 = fixfont:pixelsize=12;2
	font-1 = unifont:fontformat=truetype:size=12:antialias=true;2
	font-2 = siji:pixelsize=12;2
	font-3 = Font Awesome 5 Free:pixelsize=12;2
	font-4 = Font Awesome 5 Free Solid:pixelsize=12;2
	font-5 = Font Awesome 5 Brands:pixelsize=12;2

[bar/main]
	inherit = bar/base

	bottom = true

	wm-restack = i3

	modules-left   = time date spacer track-prev track-playpause track-next spotify
	modules-center = i3
	modules-right  = i3-mode spacer notification spacer volume power

; ======== MODULES ========

[module/base]
	label-background = ${colors.background}
	label-padding = 5

[module/spacer]
	type = custom/text
	content-padding = 1
	content = " "

	background = ${colors.background}
	label-padding = 5

; focused = Active workspace on focused monitor
; unfocused = Inactive workspace on any monitor
; visible = Active workspace on unfocused monitor
; urgent = Workspace with urgency hint set
; the labels could also have the key %index% to indicate which number desktop
;	they are.
[module/i3-mode]
	type = internal/i3

	format = <label-mode>

	label-mode-padding = 3
	label-mode-foreground = ${colors.background}
	label-mode-background = ${colors.yellow}
	label-mode = %mode%

[module/i3]
	type = internal/i3

	format = <label-state>
	index-sort = true
	wrapping-scroll = false

	ws-icon-0 = 1;
	ws-icon-1 = 2;
	ws-icon-2 = 3;3
	ws-icon-3 = 4;4
	ws-icon-4 = 5;5
	ws-icon-5 = 6;6
	ws-icon-6 = 7;7
	ws-icon-7 = 8;
	ws-icon-8 = 9;
	ws-icon-9 = 10;

	label-focused = %icon%
	label-focused-background = ${colors.primary}
	label-focused-foreground = ${colors.primary-bg}
	label-focused-overline = ${colors.primary}
	label-focused-padding = 3

	label-unfocused = %icon%
	label-unfocused-background = ${colors.background}
	label-unfocused-padding = 3

	label-visible = %icon%
	label-visible-background = ${colors.background}
;	label-visible-underline = ${self.label-focused-underline}
	label-visible-padding = 3

	label-urgent = %icon%
	label-urgent-background = ${colors.yellow}
	label-urgent-padding = 3


[module/spotify]
	type = custom/script


	interval = 1
	format = <label>
	format-prefix = ""
	format-prefix-padding = 2.5
	format-right-padding = 2.5

	format-background = ${colors.black}

	label-background = ${colors.background}
	label-padding = 5

	exec = python3 /home/oldwomanjosiah/github/scripts/polybar-spotify/spotify_status.py -f '{artist}: {song}' -t 30
	format-underline = ${colors.green}

	click-left = i3 workspace 10

; TODO replace with custom script to display different char based on curcumstances
[module/track-playpause]
	type = custom/script
	interval = 0.1

	label-background = ${colors.green}
	label-padding = 2.5

	exec = /home/oldwomanjosiah/.config/polybar/playing.sh
	click-left = playerctl --player=spotify play-pause

[module/track-prev]
	type = custom/text

	content-background = ${colors.green}
	content-padding = 2.5

	content = ""
	click-left = playerctl previous

[module/track-next]
	type = custom/text

	content-background = ${colors.green}
	content-padding = 2.5

	content = ""
	click-left = playerctl next

[module/date]
	type = internal/date
	interval = 5

	format-background = ${colors.background}
	format-padding = 5


	date = "%A %b %d"
;	date-alt = "%Y-%m-%d"

	label = %date%

	format =  <label>

[module/time]
	type = internal/date

	time = %H:%M

	label = %time%

	format-prefix = " "
	format = <label>
	format-background = ${colors.primary}
	format-foreground = ${colors.primary-bg}
	format-padding = 5


[module/notification]
	type = "custom/script"

	format-padding = 2.5
	format-background = ${colors.background}

	label =  %output%

	exec = "(dbus-send --session --print-reply=literal --dest=org.freedesktop.Notifications /org/freedesktop/Notifications org.freedesktop.Notifications.ShowNotificationCount 2>/dev/null || ($HOME/.local/bin/i3-notifier && echo '? ? ?'))|tr -s ' '|cut -d' ' -f 3"
	click-left = "dbus-send --session --print-reply --dest=org.freedesktop.Notifications /org/freedesktop/Notifications org.freedesktop.Notifications.ShowNotifications"

[module/volume]
	type = internal/alsa

	format-volume-padding = 2.5
	format-muted-padding = 2.5
	format-volume-background = ${colors.background}
	format-muted-background = ${colors.background}

	format-volume = <ramp-volume>   <label-volume>
	format-muted  = <label-muted>

	label-muted = 

	ramp-volume-0 = 
	ramp-volume-1 = 
	ramp-volume-2 = 
	

[module/power]
	type = custom/text

	content-padding = 2.5
	content-background = ${colors.background}

	content = 

	click-left = rofi -show power-menu -modi power-menu:rofi-power-menu
