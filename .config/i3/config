mode "tray" {
	bindsym Escape mode default; exec --no-startup-id /home/oldwomanjosiah/.config/stalonetray/unmap.sh
	bindsym $mod+Shift+t mode default; exec --no-startup-id /home/oldwomanjosiah/.config/stalonetray/unmap.sh
}

bindsym $mod+Shift+t mode tray; exec --no-startup-id /home/oldwomanjosiah/.config/stalonetray/map.sh

# redshift controls
bindsym $mod+Shift+W mode "$mode_redshift"
set $mode_redshift Set colour temperature: (a)uto, (r)eset, (2)500K, (3)000K, (4)000K, (5)000K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
    bindsym a exec --no-startup-id "$kill_redshift redshift -P -t 5000:3500", mode "default"
    bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
    bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
    bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 3000", mode "default"
    bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 4000", mode "default"
    bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"
 
    # exit mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}



